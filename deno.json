{
  "fmt": {
    "options": {
      "indentWidth": 2,
      "singleQuote": true
    }
  },
  "tasks": {
    "pre-compile": "rm -rf ./bin && mkdir ./bin",
    "compile:linux": "deno compile --config=./deno.json --allow-net --output=./bin/cf-triggers_$(cat VERSION)_linux_x86_64 --target=x86_64-unknown-linux-gnu ./src/main.ts",
    "compile:windows": "deno compile --config=./deno.json --allow-net --output=./bin/cf-triggers_$(cat VERSION)_windows_x86_64 --target=x86_64-pc-windows-msvc ./src/main.ts",
    "compile:apple_x86_64": "deno compile --config=./deno.json --allow-net --output=./bin/cf-triggers_$(cat VERSION)_darwin_x86_64 --target=x86_64-apple-darwin ./src/main.ts",
    "compile:apple_aarch64": "deno compile --config=./deno.json --allow-net --output=./bin/cf-triggers_$(cat VERSION)_darwin_aarch64 --target=aarch64-apple-darwin ./src/main.ts",
    "compile": "deno task pre-compile && deno task compile:linux && deno task compile:windows && deno task compile:apple_x86_64 && deno task compile:apple_aarch64"
  }
}
